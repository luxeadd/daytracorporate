<article class="card">
  <a href="<%- link %>">
    <div class="card__header card__header--aside">
      <figure class="card__figure card__figure--aside">
        <img src="<%- img %>" alt="">
      </figure>
     </div><!-- /.card__header -->
     <div class="card__body card__body--aside">
       <div class="card__meta">
         <div class="card__category card__category--aside"><%- category %></div><!-- /.card__category -->
         <time class="card__time" datetime=""><%- time %></time>
       </div><!-- /.card__meta -->
        <h3 class="card__title card__title--aside"><%- title %></h3>
      </div><!-- /.card__body -->
     </a>
  </article>